citHeader("To cite vGWAS in publications use:")

citEntry(entry="Article",
         title = "Inheritance beyond plain heritability: variance-controlling genes in Arabidopsis thaliana",
         author = personList(as.person("Xia Shen"),
                             as.person("Mats Pettersson"),
                             as.person("Lars Ronnegard"),
                             as.person("Orjan Carlborg")),
         journal      = "PLoS Genetics",
         year         = "2012",
         volume       = "8",
         number       = "e1002839",
         url          = "http://www.plosgenetics.org/article/info:doi/10.1371/journal.pgen.1002839",
         
         textVersion = 
         paste("Xia Shen, Mats Pettersson, Lars Ronnegard and Orjan Carlborg (2012).", 
               "Inheritance beyond plain heritability: variance-controlling genes in Arabidopsis thaliana.",
               "PLoS Genetics.",
               "URL http://www.plosgenetics.org/article/info:doi/10.1371/journal.pgen.1002839")
)

